.movie {
  display: flex;
}

.movie-details {
  display: flex;
  flex-direction: column;
  width: 550 rpx;
}

.movie-image {
  width: 200 rpx;
  height: 200 rpx;
}

/* vh is the percentage of a page */

.movie-swiper {
  height: 90vh;
}

.movie-card {
  height: 100%;
  width: 100%;
  background: azure;
  margin: 0 20rpx;
  position: relative;
}

.return-button {
  position: absolute;
  left: 20px;
  bottom:  30px;
  font-size: 26rpx;
  font-style: italic;
  border: 1px solid blue;
  border-right: 0;
  border-radius: 10%;
}

.other-button {
  display: flex;
  justify-content: space-around;
  height: 30vh;
  margin: 20px;
  flex-direction: column;
}